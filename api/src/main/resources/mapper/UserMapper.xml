<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zipsoon.api.interfaces.mapper.UserMapper">

    <resultMap id="userResultMap" type="com.zipsoon.api.domain.user.User">
        <id property="id" column="id"/>
        <result property="email" column="email"/>
        <result property="name" column="name"/>
        <result property="imageUrl" column="image_url"/>
        <result property="role" column="role"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="findById" resultMap="userResultMap">
        SELECT *
        FROM app_user
        WHERE id = #{id}
    </select>

    <select id="findByEmail" resultMap="userResultMap">
        SELECT *
        FROM app_user
        WHERE email = #{email}
    </select>


    <select id="existsByEmail" resultType="boolean">
        SELECT EXISTS(
            SELECT 1
            FROM app_user
            WHERE email = #{email}
        )
    </select>

    <insert id="save" parameterType="com.zipsoon.api.domain.user.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO app_user (
            email,
            name,
            image_url,
            role,
            created_at,
            updated_at
        ) VALUES (
            #{email},
            #{name},
            #{imageUrl},
            #{role},
            #{createdAt},
            #{updatedAt}
        )
    </insert>

    <delete id="delete">
        DELETE FROM app_user
        WHERE id = #{id}
    </delete>

</mapper>
